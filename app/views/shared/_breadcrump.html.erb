<!-- Breadcrumb -->
<nav class="flex px-5 py-3 text-gray-700 border border-gray-200 rounded-lg bg-gray-50 w-max" aria-label="Breadcrumb">
  <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
  <% breadcrumps.each do |breadcrump| %>
    <li class="inline-flex items-center">
      <% if breadcrump.link? %>
       <%= link_to breadcrump.name, breadcrump.path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600" %>  
      <% else %>
        <span class="ms-1 text-sm font-medium text-gray-500 md:ms-2 dark:text-gray-400"><%= breadcrump.name %></span>
      <% end %>
      <% unless breadcrumps.last == breadcrump %>
        <svg class="rtl:rotate-180 block w-3 h-3 mx-1 text-gray-400 " aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
        </svg>
      <% end %>
    </li>
  <% end %>
  </ol>
</nav>
