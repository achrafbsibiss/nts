<%= form_with(model: @site, local: true, class: "my-5") do |form| %>
  <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
    <div class="w-full">
      <%= form.label :name, t("attributes.site.name"), class: "block mb-2 text-sm font-medium text-gray-900" %>
      <div class="mt-2">
        <%= form.text_field :name, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
        <%#= inline_error_for(:name, @site).html_safe %>
      </div>
    </div>

    <div class="w-full">
      <%= form.label :city, t("attributes.site.city"), class: "block mb-2 text-sm font-medium text-gray-900" %>
      <div class="mt-2">
        <%= form.text_field :city, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
        <%#= inline_error_for(:city, @site).html_safe %>
      </div>
    </div>

    <div class="w-full">
      <%= form.label :phone, t("attributes.site.phone"), class: "block mb-2 text-sm font-medium text-gray-900" %>
      <div class="mt-2">
        <%= form.telephone_field :phone, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
        <%#= inline_error_for(:phone, @site).html_safe %>
      </div>
    </div>

    <div class="w-full">
      <%= form.label :adresse, t("attributes.site.address"), class: "block mb-2 text-sm font-medium text-gray-900" %>
      <div class="mt-2">
        <%= form.text_field :adresse, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
        <%#= inline_error_for(:adress, @site).html_safe %>
      </div>
    </div>

 
  </div>
    <div class="w-full">
      <%= form.label :description, t("attributes.site.description"), class: "block mb-2 text-sm font-medium text-gray-900" %>
      <div class="mt-2">
        <%= form.rich_text_area :description, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full " %>
        <%#= inline_error_for(:description, @client).html_safe %>
      </div>
    </div>
    <div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 my-5 px-4 py-4 sm:px-8">
      <%= link_to t("attributes.buttons.cancel"), sites_path%>
      <% if @site&.new_record? %>
        <%= form.submit t("buttons.save"), class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      <% else %>
        <%= form.submit t("buttons.update"), class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      <% end %>
    </div>
<% end %>
