<tr id="<%#= dom_id site %>">
  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm text-gray-500 sm:pl-6"><%= site.name %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= site.city %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= site.phone %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= site.adresse %></td>
  <!-- td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= site.description %></td -->
  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
    <div class="flex justify-end">
      <%= link_to "edit", edit_site_path(site), data: {turbo_frame: "right_content", action: "right#show"} %>
      <%= button_to "delete", site_path(site), class: "ml-4", method: :delete, data: {turbo_confirm: "Are you sure you wanna delete this?"}%>
    </div>
  </td>
</tr>