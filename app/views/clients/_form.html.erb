<%= form_with(model: @client, local: true, class: "my-5") do |form| %>
  <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
    <div class="sm:col-span-2">
      <%= form.label :logo, class: "block mb-2 text-sm font-medium text-gray-900" do %>
        <%= t("views.clients.logo") %>
      <% end %>
      <div class="items-center w-full sm:flex">
        <% if @client.logo.persisted?%>
          <%= image_tag @client.logo, class: "w-20 h-20 mb-4 rounded-full sm:mr-4 sm:mb-0" %>
        <% end %>
        <div class="w-full">
          <%= form.file_field :logo, class: "w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400", accept: 'image/svg,image/png,image/jpg,image/jpeg', id: "avatar-input", type: "file" %>
          <p class="mt-1 text-xs font-normal text-gray-500 dark:text-gray-300" id="file_input_help">SVG, PNG, JPG or GIF (MAX. 800x400px).</p>
        </div>
      </div>
    </div>

    <div class="w-full">
      <%= form.label :name, t("attributes.clients.name"), class: "block mb-2 text-sm font-medium text-gray-900" %>
      <div class="mt-2">
        <%= form.text_field :name, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
        <%= inline_error_for(:name, @client).html_safe %>
      </div>
    </div>
    <div class="w-full">
      <%= form.label :responsible_name, t("attributes.clients.responsible_name"), class: "block mb-2 text-sm font-medium text-gray-900" %>
      <div class="mt-2">
        <%= form.text_field :responsible_name, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
        <%= inline_error_for(:responsible_name, @client).html_safe %>
      </div>
    </div>
      <div class="w-full">
      <%= form.label :responsible_email, t("attributes.clients.responsible_email"), class: "block mb-2 text-sm font-medium text-gray-900" %>
      <div class="mt-2">
        <%= form.text_field :responsible_email, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
        <%= inline_error_for(:responsible_email, @client).html_safe %>
      </div>
    </div>

    <div class="w-full">
      <%= form.label :phone, t("attributes.clients.phone"), class: "block mb-2 text-sm font-medium text-gray-900" %>
      <div class="mt-2">
        <%= form.text_field :phone, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
        <%= inline_error_for(:phone, @client).html_safe %>
      </div>
    </div>

    <div class="w-full">
      <%= form.label :adress, t("attributes.clients.adress"), class: "block mb-2 text-sm font-medium text-gray-900" %>
      <div class="mt-2">
        <%= form.text_field :adress, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
        <%= inline_error_for(:adress, @client).html_safe %>
      </div>
    </div>

    <div class="w-full">
      <%= form.label :city, t("attributes.clients.city"), class: "block mb-2 text-sm font-medium text-gray-900" %>
      <div class="mt-2">
        <%= form.text_field :city, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
        <%= inline_error_for(:city, @client).html_safe %>
      </div>
    </div>

    <div class="w-full">
      <%= form.label :code_postal, t("attributes.clients.code_postal"), class: "block mb-2 text-sm font-medium text-gray-900" %>
      <div class="mt-2">
        <%= form.text_field :code_postal, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
        <%= inline_error_for(:code_postal, @client).html_safe %>
      </div>
    </div>

    <div class="w-full">
      <%= form.label :site_id, t("attributes.clients.project"), class: "block mb-2 text-sm font-medium text-gray-900" %>
      <div class="mt-2">
        <%= form.select :site_id, options_for_select(Site.pluck(:name, :id), @client.site_id), {include_blank: true}, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2" %>
        <%= inline_error_for(:site_id, @client).html_safe %>
      </div>
    </div>
  </div>
   <div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 my-5 px-4 py-4 sm:px-8">
      <%= link_to t("attributes.buttons.cancel"), clients_path%>
      <% if @client.new_record? %>
        <%= form.submit t("buttons.save"), class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      <% else %>
        <%= form.submit t("buttons.update"), class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      <% end %>
    </div>

<% end %>
